<table class = "table is-bordered">
    <tr>
        <th>Email</th>
        <th>Admin</th>
        <th>Account Status</th>
        <th>Action</th>
        <th></th>
    </tr>
    <% @user.each do |user| %>
        <tr>
            <td><%= user.email%></td>
            <td><%= user.admin %></td>
            <td><%= user.account_status %></td>
            <td><%= link_to "Edit", edit_admin_user_path(user.id), class: "button is-link is-small" %></td>
            <td><%= link_to "View", admin_user_path(user.id), class: "button is-link is-small" %></td>
         </tr>
    <% end %>
</table>